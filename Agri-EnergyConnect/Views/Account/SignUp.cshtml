@model Agri_EnergyConnect.Models.SignUpViewModel

@{
    ViewData["Title"] = "Sign Up - Agri-Energy Connect";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-body p-5 bg-light">
                    <h2 class="text-center mb-4 text-success">Create an Account</h2>
                    <form asp-action="SignUp" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your Email Address" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Cell Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your Phone Number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Create a Password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100 mt-3 rounded-pill">Sign Up</button>
                    </form>
                    <p class="mt-4 text-center text-muted small">
                        Already have an account? <a href="/Account/Login" class="text-decoration-none text-primary">Login here</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
