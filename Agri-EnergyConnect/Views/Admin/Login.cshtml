@model Agri_EnergyConnect.Models.ViewModels.AdminLoginViewModel

@{
    ViewData["Title"] = "Admin Login";
}

<h2 class="mb-4">Admin Login</h2>

<form asp-action="Login" method="post" class="p-4 bg-light rounded shadow-sm" style="max-width: 500px;">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group">
        <label asp-for="Email" class="font-weight-bold">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="font-weight-bold">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3 w-100">Login</button>
</form>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        ← Back to Dashboard
    </a>
</div>
