@model Agri_EnergyConnect.Models.ProjectCollaboration

@{
    ViewData["Title"] = "Create Collaboration Project";
}

<div class="container my-5">
    <h2 class="text-success text-center mb-4">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" method="post" class="card p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="ProjectName" class="form-control" placeholder="Project Name" />
                    <label asp-for="ProjectName"></label>
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 120px;"></textarea>
                    <label asp-for="Description"></label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="OwnerName" class="form-control" placeholder="Owner Name" />
                    <label asp-for="OwnerName"></label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ContactEmail" class="form-control" placeholder="Contact Email" type="email" />
                    <label asp-for="ContactEmail"></label>
                </div>

                <button type="submit" class="btn btn-success w-100">Submit Project</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<div class="mb-4">
    <a asp-controller="Home" asp-action="UserHome" class="btn btn-outline-success">
        ← Back to Home
    </a>
</div>