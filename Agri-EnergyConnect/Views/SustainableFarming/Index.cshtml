@{
    ViewData["Title"] = "Sustainable Farming Hub";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h2 class="text-success">Sustainable Farming Hub</h2>
        <p class="text-muted">Empowering farmers with knowledge for eco-friendly agricultural practices.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <a href="https://www.fao.org/soils-portal/en/" target="_blank" class="text-decoration-none">
                <div class="p-4 bg-dark text-white rounded shadow h-100">
                    <h4>Soil Health & Management</h4>
                    <p>Explore techniques like crop rotation, composting, and no-till farming to preserve soil quality.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6">
            <a href="https://www.epa.gov/watersense" target="_blank" class="text-decoration-none">
                <div class="p-4 bg-dark text-white rounded shadow h-100">
                    <h4>Water Conservation</h4>
                    <p>Learn about drip irrigation, mulching, and rainwater harvesting to reduce water usage.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6">
            <a href="https://www.organic-center.org/research/organic-pest-management" target="_blank" class="text-decoration-none">
                <div class="p-4 bg-dark text-white rounded shadow h-100">
                    <h4>Organic Pest Control</h4>
                    <p>Discover natural solutions for managing pests and diseases without harmful chemicals.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6">
            <a href="https://www.agriculture.com/news/technology" target="_blank" class="text-decoration-none">
                <div class="p-4 bg-dark text-white rounded shadow h-100">
                    <h4>Latest Research & Innovations</h4>
                    <p>Stay updated with the newest developments and trends in sustainable farming.</p>
                </div>
            </a>
        </div>
    </div>
</div>
